@inherits Masa.Blazor.Popup.Components.PopupComponentBase

<MDialog Value="Visible" MaxWidth="360">
    <MCard Tile>
        <MListItem Title="@CurrencyDisplay.DisplayName"
                   PrependAvatar="@CurrencyDisplay.DisplayImage">
        </MListItem>

        <MCardSubtitle>@CurrencyDisplay.DisplayDesc</MCardSubtitle>
    
        <MCardActions>
            <MTextField OnAppendClick="@OnUpdateCurrency"
                        AppendIcon="mdi-pencil-outline"
                        Type="number"
                        TValue="decimal"
                        Loading="@CurrencyDisplay.Loading"
                        Disabled="@CurrencyDisplay.Loading"
                        Label="@CurrencyDisplay.DisplayName"
                        @bind-Value="@CurrencyInfo.Currency"
                        NumberProps="@(prop => { prop.Min = 0; prop.Max = int.MaxValue; prop.Step =1; prop.HideControl= true; })" />

        </MCardActions>
    </MCard>
</MDialog>

